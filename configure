#!/usr/bin/env ruby
require 'uri'

$current_dir = File.dirname(File.expand_path(__FILE__))
Dir[File.join($current_dir, "setup/*.rb")].each do |file|
  require_relative(file)
end

pod_name = ARGV.shift
module_type = URI(Dir.pwd).path.split('/').last
Pod::TemplateConfigurator.new(pod_name, module_type).run
